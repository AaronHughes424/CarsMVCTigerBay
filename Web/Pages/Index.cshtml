@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div>
    <h1 class="text-center">Cars, Cars, Cars!</h1>
</div>
<div>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Make</th>
                <th>Model</th>
                <th>Colour</th>
                <th>Doors</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model.Cars)
            {
                <tr>
                    <td>@car.Make</td>
                    <td>@car.Model</td>
                    <td>@car.Colour</td>
                    <td>@car.Doors</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <p class="text-center">Want to add more cars? <a href="/AddCar">Click Here!</a></p>
</div>

