@page
@model Web.Pages.AddCarModel
@{
    ViewData["Title"] = "Add A Car";
}
<h1>@ViewData["Title"]</h1>

<p>Want to add a Car? Fill out the form below.</p>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-page="./AddCar">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="Car.Make"></label>
                <input asp-for="Car.Make" class="form-control" />
                <span asp-validation-for="Car.Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Model"></label>
                <input asp-for="Car.Model" class="form-control" />
                <span asp-validation-for="Car.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Colour"></label>
                <input asp-for="Car.Colour" class="form-control" />
                <span asp-validation-for="Car.Colour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Doors"></label>
                <input asp-for="Car.Doors" class="form-control" />
                <span asp-validation-for="Car.Doors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>
